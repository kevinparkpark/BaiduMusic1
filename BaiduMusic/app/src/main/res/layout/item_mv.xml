<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:id="@+id/mv_relativelayout"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_mv"
        android:layout_width="@dimen/two_zero_zero_dp"
        android:layout_height="@dimen/one_two_zero_dp"
        android:src="@mipmap/le_mv_image" />

    <TextView
        android:id="@+id/tv_mv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_mv"
        android:text="@string/title" />

    <TextView
        android:id="@+id/tv_mv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_mv_name"
        android:text="@string/author" />
</RelativeLayout>
</RelativeLayout>
