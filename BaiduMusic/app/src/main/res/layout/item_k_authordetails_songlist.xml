<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_margin="@dimen/five_dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout2">
    <TextView
        android:maxEms="15"
        android:maxLines="1"
        android:textSize="@dimen/one_five_sp"
        android:id="@+id/tv_item_authordetailssonglist_title"
        android:layout_marginLeft="@dimen/tendp"
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:maxEms="15"
        android:maxLines="1"
        android:textSize="12sp"
        android:id="@+id/tv_item_authordetailssonglist_albumtitle"
        android:layout_marginLeft="@dimen/tendp"
        android:text="@string/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <ImageView
        android:id="@+id/iv_item_k_authordetails_songlist_more"
        android:src="@mipmap/ic_list_more_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>