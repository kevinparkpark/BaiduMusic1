<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:id="@+id/relativelayout_songmenu"
    android:layout_width="191dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_songmenu_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@mipmap/tingmenuimage1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_songmenu_image"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="11dp"
        android:src="@mipmap/ic_lebo_listen"
        android:id="@+id/imageView8" />
    <TextView
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8"
        android:layout_marginStart="17dp"
        android:id="@+id/tv_songmenu_count" />
    <ImageView
        android:id="@+id/iv_songmenu_play"
        android:src="@mipmap/ic_listmore_play_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_songmenu_count"
        android:layout_alignEnd="@+id/iv_songmenu_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016Bullboard美国公告牌颁奖礼"
        android:layout_below="@+id/iv_songmenu_image"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_songmenu_title" />
    <TextView
        android:id="@+id/tv_songmenu_where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欧美,Billboard"
        android:layout_below="@+id/tv_songmenu_title"
        android:layout_alignParentStart="true" />
</RelativeLayout>

</LinearLayout>