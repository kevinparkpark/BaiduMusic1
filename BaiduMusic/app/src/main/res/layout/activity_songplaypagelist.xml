<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/songplaylistpage">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/songplaypagelist_listview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/four_eight_zero_dp"
            android:layout_below="@+id/relativeLayout4"
            android:layout_alignParentStart="true">

        </ListView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4">

        <TextView
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/tv_songplaypagelist_text"
            android:text="@string/playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/tv_songplaypagelist_clear"
            android:text="@string/allclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:src="@drawable/play_mode_level"
            android:id="@+id/iv_songplaypagelist_playmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_songplaypagelist_shutdown"
        android:textSize="@dimen/two_zero_sp"
        android:text="@string/shutdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
</LinearLayout>