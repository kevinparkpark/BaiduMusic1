<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/popupwindow_main_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#66000000"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
    android:id="@+id/tv_popsonglist_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/relativeLayout3" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/four_four_two_dp"
        android:background="@android:color/white"
        android:id="@+id/relativeLayout3">

        <TextView
            android:id="@+id/tv_main_popupwindow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/popupwindow_main_listview"
            android:layout_alignTop="@+id/iv_main_popupwindow_playorder"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/now_playlist" />

        <TextView
            android:id="@+id/tv_main_popupwindow_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/popupwindow_main_listview"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_main_popupwindow_text"
            android:gravity="center"
            android:text="@string/all_clear" />

        <ImageView
            android:id="@+id/iv_main_popupwindow_playorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/popupwindow_main_listview"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/one_nine_dp"
            android:src="@drawable/play_mode_level" />

        <ListView
            android:id="@+id/popupwindow_main_listview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/three_nine_eight_dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">

        </ListView>
    </RelativeLayout>
</RelativeLayout>