<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/five_dp">

    <RelativeLayout
        android:id="@+id/relativelayout_item_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/iv_item_recommend_img"
        android:layout_width="@dimen/one_one_zero_dp"
        android:layout_height="@dimen/one_one_zero_dp"
        android:src="@mipmap/recommend_recyclerview" />

    <TextView
        android:id="@+id/tv_item_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/title"
        android:layout_below="@+id/iv_item_recommend_img"
        android:layout_alignParentStart="true" />
    <ImageView
        android:src="@mipmap/ic_lebo_listen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView21"
        android:layout_above="@+id/tv_item_recommend_title"
        android:layout_alignParentStart="true" />
    <TextView
        android:textColor="@android:color/white"
        android:textSize="@dimen/ten_sp"
        android:id="@+id/tv_item_recommend_count"
        android:text="@string/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView21"
        android:layout_toEndOf="@+id/imageView21" />
    </RelativeLayout>

</RelativeLayout>