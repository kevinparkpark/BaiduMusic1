<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/title_fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/radio"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <android.support.design.widget.TabLayout
            android:id="@+id/title_tablayout"
            android:layout_width="@dimen/two_seven_three_dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.74">

        </android.support.design.widget.TabLayout>

        <ImageView
            android:id="@+id/iv_title_search"
            android:layout_marginTop="@dimen/one_one_dp"
            android:layout_marginRight="@dimen/tendp"
            android:layout_width="@dimen/three_zero_dp"
            android:layout_height="@dimen/two_seven_dp"
            android:src="@mipmap/sousuo" />
        <ImageView
            android:id="@+id/iv_title2login"
            android:layout_width="@dimen/three_eight_dp"
            android:layout_height="match_parent"
            android:src="@mipmap/geren" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/title_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>
</LinearLayout>