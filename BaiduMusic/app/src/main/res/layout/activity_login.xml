<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1fb5fc"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_login_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/ic_back_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="返回"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@android:color/white">

                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape"
                    android:hint="请输入账号"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/et_login_pw"
                    android:id="@+id/et_login_id" />
                <EditText
                    android:background="@drawable/shape"
                    android:hint="请输入密码"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_login_pw"
                    android:layout_below="@+id/et_login_id"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/btn_login_login"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_loginbtn"
                    android:text="立即登录"
                    android:layout_below="@+id/et_login_pw"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp" />

                <TextView
                    android:id="@+id/tv_login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册账号"
                    android:layout_alignBottom="@+id/btn_login_login"
                    android:layout_toEndOf="@+id/et_login_pw" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/iv_login_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/bt_setup_wifi_nor" />

                <ImageView
                    android:id="@+id/iv_login_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/bt_setup_auto_close_nor" />

                <ImageView
                    android:id="@+id/iv_desk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/bt_setup_desktoplyrics_nor" />

                <ImageView
                    android:id="@+id/iv_login_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/bt_setup_lockscreen_nor" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_background" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>