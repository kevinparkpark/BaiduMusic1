<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:background="#1fb5fc"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageView
        android:src="@mipmap/ic_back_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_my_latelyplaylist_back"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />
    <TextView
        android:text="最近播放"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_my_latelyplaylist_back" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@mipmap/bt_localmusic_play_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView15"
            android:layout_alignTop="@+id/textView12"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp" />
        <TextView
            android:text="随机播放"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_alignTop="@+id/imageView20"
            android:layout_toEndOf="@+id/imageView15" />
        <ImageView
            android:src="@mipmap/bt_download_all_start_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView13"
            android:layout_toStartOf="@+id/textView13" />
        <TextView
            android:text="批量下载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:src="@mipmap/bt_localmusic_edit_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView20"
            android:layout_alignBottom="@+id/textView14"
            android:layout_toStartOf="@+id/textView14" />
        <TextView
            android:text="批量管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_alignTop="@+id/textView13"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/my_latelyplaylist_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>