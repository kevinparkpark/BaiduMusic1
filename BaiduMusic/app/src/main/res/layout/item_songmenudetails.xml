<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:id="@+id/tv_songmenudetails_title" />


    <ImageView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.03"
        android:src="@mipmap/le_rankdetails_more"
        android:layout_alignTop="@+id/tv_songmenudetails_author"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author"
        android:layout_below="@+id/tv_songmenudetails_title"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_songmenudetails_author" />


</RelativeLayout>