<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<LinearLayout
    android:layout_margin="@dimen/tendp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nine_zero_dp">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_le_rank_new"
        android:layout_width="@dimen/eight_nine_dp"
        android:layout_height="@dimen/eight_nine_dp"
        android:src="@mipmap/l_rank" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_le_rank_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recommend_name"
            android:textSize="@dimen/one_five_sp" />

        <TextView
            android:maxLines="1"
            android:maxEms="10"
            android:textSize="@dimen/one_two_sp"
            android:id="@+id/tv_le_rank_no1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_le_rank_new"
            android:text="@string/title" />

        <TextView
            android:maxLines="1"
            android:maxEms="10"
            android:textSize="@dimen/one_two_sp"
            android:id="@+id/tv_le_rank_no2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_le_rank_no1"
            android:text="@string/title" />

        <TextView
            android:maxLines="1"
            android:maxEms="10"
            android:textSize="@dimen/one_two_sp"
            android:id="@+id/tv_le_rank_no3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_le_rank_no2"
            android:text="@string/title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_songlist_detail_nor"
            android:layout_marginEnd="@dimen/two_two_dp"
            android:layout_below="@+id/tv_le_rank_new"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>