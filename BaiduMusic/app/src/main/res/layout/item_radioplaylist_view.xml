<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/iv_view_playlist_img"
        android:layout_gravity="center"
        android:src="@mipmap/raidoplaylist_imgview"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/iv_view_playlist_img"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/tv_view_playlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author"
            android:id="@+id/tv_view_playlist_author"
            android:layout_below="@+id/tv_view_playlist_title"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_view_playlist_time"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_view_playlist_author"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <ImageView
        android:src="@mipmap/scenario_drive_play_button_normal"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:id="@+id/iv_view_playlist_play"
        android:layout_marginBottom="64dp"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>