<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:color/white">
<TextView
    android:text="@string/welcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_login_replace_username"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="@dimen/nine_six_dp"
    android:layout_marginTop="@dimen/two_three_dp" />
    <TextView
        android:id="@+id/tv_login_replace_logout"
        android:text="@string/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/four_seven_dp"
        android:layout_below="@+id/tv_login_replace_username"
        android:layout_alignParentEnd="true" />
</RelativeLayout>