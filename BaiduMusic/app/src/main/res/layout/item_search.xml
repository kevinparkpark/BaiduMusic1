<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.26">
    <TextView
        android:id="@+id/tv_search_songname"
        android:maxLines="1"
        android:maxEms="10"
        android:textSize="@dimen/one_eight_sp"
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_search_where"
        android:maxLines="1"
        android:maxEms="15"
        android:textSize="@dimen/one_eight_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_search_author"
        android:maxLines="1"
        android:maxEms="15"
        android:text="@string/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <ImageView
        android:src="@mipmap/ic_list_more_normal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/two_eight_dp"
        android:layout_weight="0.08"
        android:layout_marginLeft="@dimen/two_zero_dp"
        android:layout_marginRight="@dimen/two_zero_dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/two_five_dp" />
</RelativeLayout>